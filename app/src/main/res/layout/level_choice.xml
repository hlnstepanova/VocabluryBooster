<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.estepanova.vocablurybooster.LevelChoice">

    <ImageView
        android:id="@+id/imageA1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Nivel A1-A2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/textViewB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewA1"
        app:srcCompat="@drawable/a1a2" />

    <TextView
        android:id="@+id/textViewA1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/bg_screen1"
        android:gravity="center"
        android:text="A1 - A2 (not available)"
        android:textColor="@color/main_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewB1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/translation"
        android:gravity="center"
        android:text="B1 - B2"
        android:textColor="@color/main_text"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageA1" />

    <ImageView
        android:id="@+id/imageB1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Nivel B1-B2"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewB1"
        app:srcCompat="@drawable/b1b2" />
</android.support.constraint.ConstraintLayout>
